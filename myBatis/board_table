CREATE TABLE public.board_table (
	id int8 GENERATED BY DEFAULT AS IDENTITY( INCREMENT BY 1 MINVALUE 1 
                                 MAXVALUE 9223372036854775807 START 1 CACHE 1 NO CYCLE) NOT NULL,
	boardtitle varchar(50) NULL,
	boardwriter varchar(20) NULL,
	boardpass varchar(20) NULL,
	boardcontents varchar(500) NULL,
	boardhits int4 DEFAULT 0 NULL,
	createdat timestamp DEFAULT now() NULL,
	fileattached int4 DEFAULT 0 NULL,
	CONSTRAINT board_table_pkey PRIMARY KEY (id)
);

CREATE TABLE board_table (
    id BIGINT AUTO_INCREMENT PRIMARY KEY,
    boardtitle VARCHAR(50) NULL,
    boardwriter VARCHAR(20) NULL,
    boardpass VARCHAR(20) NULL,
    boardcontents VARCHAR(500) NULL,
    boardhits INT DEFAULT 0 NULL,
    createdat TIMESTAMP DEFAULT CURRENT_TIMESTAMP NULL,
    fileattached INT DEFAULT 0 NULL
);
